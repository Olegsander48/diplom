      </Button>
      <Button fx:id="closeWindowButton" layoutX="272.0" layoutY="208.0" mnemonicParsing="false" onAction="#onCloseWindowButtonClick" prefHeight="0.0" prefWidth="99.0" text="Закрыть">
         <font>
            <Font size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
