<AnchorPane fx:id="inputDijkstraAnchorPane" prefHeight="250.0" prefWidth="421.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.bntu.fitr.diplom.controllers.utility.InputDijkstraController">
   <children>
      <ComboBox fx:id="startComboBox" layoutX="164.0" layoutY="14.0" prefHeight="26.0" prefWidth="206.0" />
      <ComboBox fx:id="endComboBox" layoutX="164.0" layoutY="133.0" prefHeight="26.0" prefWidth="206.0" />
      <Label layoutX="50.0" layoutY="17.0" text="Начало:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="136.0" text="Конец:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="54.0" prefHeight="70.0" prefWidth="276.0" text="Если не выбран конечный пункт, то будет показан кратчайший путь к последней вершине:" wrapText="true">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Button fx:id="showRouteButton" layoutX="50.0" layoutY="176.0" mnemonicParsing="false" onAction="#onShowRouteButtonClick" prefHeight="58.0" prefWidth="206.0" text="Показать маршрут">
